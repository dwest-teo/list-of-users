{
  "name": "list-of-users",
  "version": "1.0.0",
  "description": "Sample app with a list of users",
  "main": "index.js",
  "author": "Donny West <donnywest@gmail.com>",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production next start",
    "start:release": "npm run build && npm run start",
    "flow": "flow check",
    "flow:watch": "flow-watch",
    "lint": "eslint components/ pages/ core/ utils/",
    "pretty": "prettier --write",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "next": "^11.1.3",
    "next-offline": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "babel-plugin-flow-react-proptypes": "^24.0.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-flowtype": "^2.47.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.122.0",
    "flow-typed": "^3.1.0",
    "flow-watch": "^1.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1"
  },
  "resolutions": {
    "flow-typed/semver": "7.1.3"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "flow-react-proptypes",
      "transform-flow-strip-types"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended",
      "prettier",
      "prettier/react",
      "prettier/flowtype"
    ],
    "plugins": [
      "flowtype",
      "react"
    ],
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 100,
          "ignoreUrls": true,
          "tabWidth": 2,
          "ignoreComments": true,
          "ignoreTemplateLiterals": true,
          "ignoreTrailingComments": true
        }
      ],
      "generator-star-spacing": 0,
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "object-curly-spacing": 0,
      "no-confusing-arrow": 0,
      "no-mixed-operators": 0,
      "no-console": 1,
      "no-trailing-spaces": 0,
      "no-cond-assign": 0,
      "dot-notation": 1,
      "arrow-parens": [
        "warn",
        "as-needed"
      ],
      "class-methods-use-this": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": "warn",
      "import/no-named-as-default": 0,
      "ava/no-ignored-test-files": 0,
      "react/forbid-prop-types": [
        2,
        {
          "forbid": [
            "any"
          ]
        }
      ],
      "react/jsx-filename-extension": 0,
      "jsx-a11y/anchor-is-valid": 0,
      "jsx-a11y/label-has-associated-control": 0,
      "jsx-a11y/label-has-for": 0
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "yarn pretty --",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
